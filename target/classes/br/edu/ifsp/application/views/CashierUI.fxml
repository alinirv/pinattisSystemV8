<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.edu.ifsp.application.controller.CashierOpenUIController">
   <children>
      <MenuBar prefHeight="27.0" prefWidth="600.0">
         <menus>
            <Menu fx:id="mnUser" mnemonicParsing="false" text="Usuario">
               <items>
                  <MenuItem fx:id="mnClose" mnemonicParsing="false" text="Fechar Caixa" />
                  <MenuItem fx:id="mnExit" mnemonicParsing="false" onAction="#returnMenuUI" text="Sair" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
      <Label layoutX="252.0" layoutY="37.0" opacity="0.15" text="CAIXA" textAlignment="CENTER">
         <font>
            <Font size="30.0" />
         </font>
      </Label>
      <Label layoutX="141.0" layoutY="283.0" text="Total  Venda" />
      <TextField fx:id="txtAmount" layoutX="214.0" layoutY="279.0" prefHeight="25.0" prefWidth="159.0" />
      <Label layoutX="154.0" layoutY="185.0" text="Reserva" />
      <ComboBox fx:id="cbBooking" layoutX="214.0" layoutY="181.0" prefHeight="25.0" prefWidth="159.0" />
      <Label layoutX="153.0" layoutY="234.0" text="Produto" />
      <ComboBox fx:id="cbProduct" layoutX="214.0" layoutY="230.0" prefHeight="25.0" prefWidth="159.0" />
      <Button fx:id="btnSearch" layoutX="214.0" layoutY="128.0" mnemonicParsing="false" onAction="#initiateCheckout" prefHeight="25.0" prefWidth="159.0" text="Iniciar Venda" />
      <Button fx:id="btnfinish" layoutX="214.0" layoutY="320.0" mnemonicParsing="false" onAction="#findItems" prefHeight="25.0" prefWidth="159.0" text="Finalizar" />
      <Button fx:id="btnAddbooking" layoutX="391.0" layoutY="181.0" mnemonicParsing="false" text="Adicionar" />
      <Button fx:id="btnProd" layoutX="391.0" layoutY="230.0" mnemonicParsing="false" onAction="#getProduct" text="Adicionar" />
   </children>
</AnchorPane>
