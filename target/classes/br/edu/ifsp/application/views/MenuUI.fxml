<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.edu.ifsp.application.controller.MenuUIController">
    <children>
      <MenuBar prefHeight="27.0" prefWidth="600.0">
        <menus>
          <Menu fx:id="mnUser" mnemonicParsing="false" text="Usuario">
            <items>
              <MenuItem fx:id="miPassword" mnemonicParsing="false" onAction="#changePassword" text="Alterar senha" />
                  <MenuItem fx:id="miSignout" mnemonicParsing="false" onAction="#signOut" text="Sair" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
        <Label layoutX="126.0" layoutY="60.0" text="PINATTIS SYSTEM" textAlignment="CENTER" textFill="#ee0808">
            <font>
                <Font name="Britannic Bold" size="43.0" />
            </font>
        </Label>
        <Button fx:id="btnUserMenu" layoutX="132.0" layoutY="148.0" mnemonicParsing="false" onAction="#userMenu" prefHeight="25.0" prefWidth="348.0" text="Gerenciamento de Usuarios">
            <font>
                <Font size="17.0" />
            </font>
        </Button>
          <Button fx:id="btnCategoryMenu" layoutX="132.0" layoutY="192.0" mnemonicParsing="false" onAction="#categoryMenu" prefHeight="25.0" prefWidth="348.0" text="Gerenciamento de Categoria">
              <font>
                  <Font size="16.0" />
              </font>
          </Button>
          <Button fx:id="btnProductMenu" layoutX="132.0" layoutY="232.0" mnemonicParsing="false" onAction="#productMenu" prefHeight="25.0" prefWidth="348.0" text="Gerenciamento de Produtos">
              <font>
                  <Font size="16.0" />
              </font>
          </Button>
        <Button fx:id="btnCashierMenu" layoutX="132.0" layoutY="271.0" mnemonicParsing="false" onAction="#salesMenu" prefHeight="25.0" prefWidth="348.0" text="Gerenciamento de Vendas">
            <font>
                <Font size="16.0" />
            </font>
        </Button>
          <Button fx:id="btnRoomMenu" layoutX="132.0" layoutY="311.0" mnemonicParsing="false" onAction="#roomMenu" prefHeight="25.0" prefWidth="348.0" text="Gerenciamento de Quartos">
              <font>
                  <Font size="16.0" />
              </font>
          </Button>
    </children>
</AnchorPane>
