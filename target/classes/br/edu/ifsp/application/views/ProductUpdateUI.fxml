<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.edu.ifsp.application.controller.ProductUpdateUIController">
   <children>
      <Label layoutX="196.0" layoutY="14.0" prefHeight="31.0" prefWidth="209.0" text="Atualizar  Produto" textAlignment="CENTER" textFill="#00000080">
         <font>
            <Font size="26.0" />
         </font>
      </Label>
      <Label layoutX="14.0" layoutY="113.0" text="Nome" />
      <TextField fx:id="txtProductName" layoutX="57.0" layoutY="109.0" prefHeight="25.0" prefWidth="447.0" />
      <Label layoutX="14.0" layoutY="154.0" text="Valor" />
      <TextField fx:id="txtProductPrice" layoutX="57.0" layoutY="150.0" prefHeight="25.0" prefWidth="149.0" />
      <Label layoutX="14.0" layoutY="201.0" text="Status" />
      <ComboBox fx:id="cbProductStatus" layoutX="57.0" layoutY="197.0" prefHeight="25.0" prefWidth="149.0" />
      <ButtonBar layoutX="324.0" layoutY="353.0">
         <buttons>
            <Button mnemonicParsing="false" onAction="#updateProduct" text="Salvar" />
            <Button fx:id="btnClear" mnemonicParsing="false" onAction="#clearProductData" text="Limpar" />
            <Button fx:id="btnBackProductrUpdate" mnemonicParsing="false" onAction="#returnProductMenuUI" text="Voltar" />
         </buttons>
      </ButtonBar>
